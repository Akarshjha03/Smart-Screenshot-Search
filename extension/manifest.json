{
  "manifest_version": 3,
  "name": "Smart Screenshot Search",
  "version": "1.0",
  "description": "Capture a webpage and search the image with Google Cloud Vision API.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
}
